@model Manufacturer

@{
    ViewData["Title"] = "Add a new Manufacturer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Manufacturer</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">

                        <img id="ProfilePicturePreview" style="max-width:150px" />

                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePitctureURL" class="control-label"></label>
                        <input asp-for="ProfilePitctureURL" class="form-control" placeholder="Picture URL" style="margin-bottom:20px" />
                        <span asp-validation-for="ProfilePitctureURL" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="FullName" style="margin-bottom:20px" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" placeholder="Bio" style="margin-bottom:20px" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePitctureURL").val();
        })

        $("#ProfilePitctureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}